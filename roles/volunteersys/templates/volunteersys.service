[Unit]
Description=Volunteer System
After=network.target

[Service]
User={{ user }}
Type=simple
EnvironmentFile={{ volunteersys_secrets_dir }}/secrets.env
WorkingDirectory={{ install_dir }}
ExecStart=/usr/local/bin/bun run src/main.ts

Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
